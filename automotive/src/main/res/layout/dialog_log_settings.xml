<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:theme="@style/redTextEdit"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="25dp"
    android:orientation="vertical">

    <com.ixam97.carStatsViewer.ui.views.MultiSelectWidget
        android:id="@+id/log_level_multiselect"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:title="Logging level"/>

    <com.ixam97.carStatsViewer.ui.views.MultiSelectWidget
        android:id="@+id/log_length_multiselect"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:title="Max log length"/>

</LinearLayout>