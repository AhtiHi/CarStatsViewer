<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:text="@string/app_name"
            android:textColor="?android:attr/textColorPrimary"
            android:textSize="50dp"
            android:textStyle="bold"/>
        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"/>
        <ImageButton
            android:id="@+id/main_button_reset"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_reset"/>

        <ImageButton
            android:id="@+id/main_button_settings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_settings"/>

    </LinearLayout>

    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="?android:attr/colorControlActivated"/>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="10dp"
        android:layout_marginStart="20dp">

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:visibility="gone"
            android:weightSum="2">

            <TextView
                style="@style/LabelCell"
                android:text="@string/main_port_connected" />

            <TextView
                android:id="@+id/chargePortConnectedTextView"
                style="@style/ValueCell"
                tools:text="false" />

        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:weightSum="2">

            <TextView
                style="@style/LabelCell"
                android:text="@string/main_current_power" />

            <TextView
                android:id="@+id/currentPowerTextView"
                style="@style/ValueCell"
                tools:text="3kWh" />

        </TableRow>
        <!--<TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:weightSum="2">

            <TextView
                style="@style/LabelCell" />

            <com.ixam97.carStatsViewer.PlotView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:id="@+id/plot1"/>

        </TableRow>-->

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:weightSum="2">

            <TextView
                style="@style/LabelCell"
                android:text="@string/main_used_energy" />

            <TextView
                android:id="@+id/usedEnergyTextView"
                style="@style/ValueCell"
                tools:text="@tools:sample/lorem" />
        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:visibility="gone"
            android:weightSum="2">

            <TextView
                style="@style/LabelCell"
                android:text="@string/main_SoC" />

            <TextView
                android:id="@+id/batteryEnergyTextView"
                style="@style/ValueCell"
                tools:text="@tools:sample/lorem" />

        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:weightSum="2">

            <TextView
                style="@style/LabelCell"
                android:text="@string/main_current_speed" />

            <TextView
                android:id="@+id/currentSpeedTextView"
                style="@style/ValueCell"
                tools:text="@tools:sample/lorem" />
        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:weightSum="2">

            <TextView
                style="@style/LabelCell"
                android:text="@string/main_traveled_distance" />

            <TextView
                android:id="@+id/traveledDistanceTextView"
                style="@style/ValueCell"
                tools:text="@tools:sample/lorem" />
        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:weightSum="2">

            <TextView
                style="@style/LabelCell"
                android:text="@string/main_inst_consumption" />

            <TextView
                android:id="@+id/currentInstConsTextView"
                style="@style/ValueCell"
                tools:text="@tools:sample/lorem" />
        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:weightSum="2">

            <TextView
                style="@style/LabelCell"
                android:text="@string/main_average_consumption" />

            <TextView
                android:id="@+id/averageConsumptionTextView"
                style="@style/ValueCell"
                tools:text="@tools:sample/lorem" />

        </TableRow>

    </TableLayout>

    <LinearLayout
        android:id="@+id/main_consumption_plot_container"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone">

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_weight="0"
            android:background="?android:attr/listDivider"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:layout_marginTop="10dp"
            android:layout_marginStart="20dp"
            android:text="@string/main_consumption"
            android:visibility="gone"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textSize="35dp"/>


        <com.ixam97.carStatsViewer.PlotView
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:layout_margin="0dp"
            android:id="@+id/main_consumption_plot"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="?android:attr/listDivider"/>


        <RadioGroup
            android:id="@+id/main_radio_group_distance"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_weight="0"
            android:orientation="horizontal">
            <RadioButton
                android:id="@+id/main_radio_10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:textSize="35dp"
                android:text="10 km"/>
            <RadioButton
                android:id="@+id/main_radio_25"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:textSize="35dp"
                android:text="25 km"/>
            <RadioButton
                android:id="@+id/main_radio_50"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:textSize="35dp"
                android:text="50 km"/>
        </RadioGroup>

    </LinearLayout>

</LinearLayout>
